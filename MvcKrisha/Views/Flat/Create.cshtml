@model MvcKrisha.Models.Flat

@using MvcKrisha.Security



@{

    ViewBag.Title = "Create";

}







@using (Html.BeginForm(null, null, FormMethod.Post, new { @enctype = "multipart/form-data" }))
{

    @Html.AntiForgeryToken()



    <div class="form-horizontal">

        <div style="margin-top: 50px; margin-left: -80px; margin-right: -80px; ">

            @if (SessionContainer.UserID != null && SessionContainer.Role == "0")
            {

                <h5 style="margin-left:350px;padding-top:60px;color:black;font-size:20px"> <b>Term life ads on site - 1 months.</b></h5>

            }

            else
            {

                <h5 style="margin-left:160px;padding-top:60px;color:black;font-size:20px;padding-bottom:30px;"> <b>Term life ads on site - 7 days. Extend can be classified using the appropriate service in your @Html.ActionLink("personal account", "Login", "Account")</b></h5>

            }

            <hr />

            @Html.ValidationSummary(true, "", new { @class = "text-danger" })



            <div class="form-group search" style="margin-left:400px; color:black;">



                @Html.LabelFor(model => model.RegionID, "Region", htmlAttributes: new { @class = "control-label col-md-2" })

                <div class="col-md-10">





                    @Html.DropDownList("RegionID", null, htmlAttributes: new { @class = "form-control" })

                    @Html.ValidationMessageFor(model => model.Region.City, "", new { @class = "text-danger" })

                </div>

            </div>



            <div class="form-group search" style="margin-left:400px; color:black;">

                @Html.LabelFor(model => model.Room, htmlAttributes: new { @class = "control-label col-md-2" })

                <div class="col-md-10">

                    @Html.DropDownList("room", null, htmlAttributes: new { @class = "text2" })

                    @Html.ValidationMessageFor(model => model.Room, "", new { @class = "text-danger" })

                </div>

            </div>



