                <div class="col-md-10">

                    @Html.EditorFor(model => model.BuildTime, new { htmlAttributes = new { @class = "form-control", type = "text" } })

                    @Html.ValidationMessageFor(model => model.BuildTime, "", new { @class = "text-danger" })

