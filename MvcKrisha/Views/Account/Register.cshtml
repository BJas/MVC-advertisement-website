@model MvcKrisha.Models.User

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal" style=" background-image: url('../../Images/shutterstock_158355224.jpg');padding-left: 0px; padding-right: 0px; height: 650px; margin-left: -180px; margin-right: -180px; padding-top: 0px; margin-top: -10px; position: relative; padding-bottom: 0px; margin-bottom: 0px; ">
        <div style="width: 400px;height:650px;margin:auto;background-color:white;">
            <h4 style="text-align:center;height:100px;padding-top:30px; padding-bottom:0px;margin-bottom:0px;background-color:#b881fc;font-family:Arial, Helvetica, sans-serif;font-size:25px;color:white" ;>
                Registration
            </h4>
            <div style="text-align:center;margin-left:30px;margin-top:40px">
                <div class="form-group">
                    <div class="col-md-10" style="padding-left:45px;">
                        <input type="text" class="form-control111" placeholder="Login" size="20" />
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-10" style="padding-left:45px;">
                        <input type="password" class="form-control111" placeholder="Password" size="20" />
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-10" style="padding-left:45px;">
                        <input type="password" class="form-control111" placeholder="RePassword" size="20" />
                        <div class="text-danger"> @ViewBag.ErrorMessage </div>
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-10" style="padding-left:45px;">
                        <input type="text" class="form-control111" placeholder="Name" size="20" />
                        <div class="text-danger"> @ViewBag.ErrorMessage </div>
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-10" style="padding-left:45px;">
                        <input type="text" class="form-control111" placeholder="Phonenumber" size="20" />
                        <div class="text-danger"> @ViewBag.ErrorMessage </div>
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-10" style="padding-left:45px;">
                        <input type="text" class="form-control111" placeholder="E-mail" size="20" />
                        <div class="text-danger"> @ViewBag.ErrorMessage </div>
                    </div>
                </div>

                <div class="form-group" style="margin-right:60px;">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Sign Up" class=" btn btn-default" style="margin-bottom: 20px; width: 100%; color: #fff; font-size: 18px; line-height: 18px; font-weight: 600; background-color: #b881fc;margin-left:-20px;" />
                    </div>
                </div>
            </div>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

